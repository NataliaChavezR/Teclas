    private void jButton5MouseClicked(java.awt.event.MouseEvent evt) {                                      
        System.exit(0);
    }                                     

    private void formKeyPressed(java.awt.event.KeyEvent evt) {                                
        if (evt.getKeyCode() == 38) {
            this.jButton1.setBackground(Color.BLACK);
            this.jLabel1.setText("Arriba");
        }else{
            this.jButton1.setBackground(Color.GRAY);
        }
        if (evt.getKeyCode() == 37){
            this.jButton2.setBackground(Color.BLACK);
            this.jLabel1.setText("Izquierda");
        }else{
            this.jButton2.setBackground(Color.gray);
        }
        if (evt.getKeyCode() == 39){
            this.jButton3.setBackground(Color.black);
            this.jLabel1.setText("Derecha");
        }else{
            this.jButton3.setBackground(Color.gray);
        }
        if (evt.getKeyCode() == 40){
            this.jButton4.setBackground(Color.black);
            this.jLabel1.setText("Abajo");
        }else{
            this.jButton4.setBackground(Color.gray);
        }
    }                               

